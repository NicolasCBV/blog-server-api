{
  "env": {
      "node": true,
      "es2021": true,
      "jest": true
  },
  "extends": [
      "standard", "prettier", "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint", "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "no-useless-constructor": "off"
  }
}
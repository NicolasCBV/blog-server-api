  "license": "MIT",
  "main": "./src/server",
  "repository": "https://github.com/Or1x/blog-server.git",
  "scripts": {
    "dev": "dotenv -e .env.dev -- ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules --no-notify --exit-child src/server.ts",
    "build": "yarn clean && babel ./src --extensions \".ts\" --out-dir ./dist/src --copy-files --no-copy-ignored",
    "clean": "rm -rf ./dist && mkdir ./dist",
    "start": "dotenv -e .env.production -- node ./dist/src/server.js",
    "test": "dotenv -e .env.test -- jest",
    "migrate:mysql": "dotenv -e .env.dev -- prisma migrate dev"
  },
  "prisma": {
    "schema": "./src/db/sql/prisma/schema.prisma"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.7",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/node": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@swc/core": "^1.2.203",
    "@swc/jest": "^0.2.21",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/jwt-simple": "^0.5.33",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.4",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "jest": "^29.3.1",
    "prettier": "^2.6.2",
    "prisma": "^4.7.1",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "dotenv-cli": "^6.0.0",
    "@prisma/client": "^4.7.1",
